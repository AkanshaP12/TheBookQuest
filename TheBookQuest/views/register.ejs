<% include partials/header %>
<link rel="stylesheet" href="/css/register.css">
<div style="background-color:dimgray" id="registerDiv">
    <div class="row" style="height: 20px;"></div>
    <div class="row">
        <div class="col-sm-6 offset-sm-3 align-middle" style="height:100%">
            <div class="row card shadow-sm" style="height:98%">
                <div class="col-sm-8 offset-sm-2" style="margin-top: 10px;">
                    <form action="/users/register" method="POST">
                        <h3 style="text-align: center">Register to TheBookQuest</h3>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputFN">First name</label>
                                <input type="text" name="firstname" class="form-control" id="inputFN" placeholder="Enter your first name" required="true">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputLN">Last name</label>
                                <input type="text" name="lastname" class="form-control" id="inputLN" placeholder="Enter your last name" required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="emailAddress">Email address</label>
                            <input type="email" name="email" class="form-control" id="emailAddress" placeholder="Enter your email address" required="true">
                        </div>
                        <div class="form-group">
                            <label for="matriculation">Matriculation number</label>
                            <input type="text" class="form-control" name="matriculation" id="matriculation" placeholder="Enter your matriculation number" required="true">
                        </div>
                        <div class="form-group">
                            <label for="dob">Date of birth</label>
                            <input type="text" class="form-control" name="dob" id="dob" placeholder="Enter your date of birth" required="true">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Please provide password" required="true">
                        </div>
                        <div class="form-group">
                            <label for="cpassword">Confirm Password</label>
                            <input type="password" class="form-control" name="confirm" id="cpassword" placeholder="Please confirm the password" required="true">
                        </div>
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>